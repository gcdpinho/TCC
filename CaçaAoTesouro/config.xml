<?xml version='1.0' encoding='utf-8'?>
<widget id="io.cordova.hellocordova" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Caça ao Tesouro</name>
    <description>
        Um jogo super divertido em que você precisa encontrar o tesouro adversário, antes que ele encontre o seu.
    </description>
    <author email="gcdpinho@gmail.com" href="http://cordova.io">
        Gustavo Pinho
    </author>
    <content src="index.html" />
    <plugin name="Bluetooth" value="org.apache.cordova.bluetooth.BluetoothPlugin" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <preference name="orientation" value="landscape"/>
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>

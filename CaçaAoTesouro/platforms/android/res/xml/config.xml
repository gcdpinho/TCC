<?xml version='1.0' encoding='utf-8'?>
<widget id="io.cordova.hellocordova" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <preference name="loglevel" value="DEBUG" />
    <feature name="BluetoothLePlugin">
        <param name="android-package" value="com.randdusing.bluetoothle.BluetoothLePlugin" />
    </feature>
    <feature name="BCBluetooth">
        <param name="android-package" value="org.bcsphere.bluetooth.BCBluetooth" />
    </feature>
    <feature name="Bluetooth">
        <param name="android-package" value="org.apache.cordova.bluetooth.BluetoothPlugin" />
    </feature>
    <feature name="NetworkingBluetooth">
        <param name="android-package" value="cordova.plugin.networking.bluetooth.NetworkingBluetooth" />
    </feature>
    <feature name="BLE">
        <param name="android-package" value="com.megster.cordova.ble.central.BLECentralPlugin" />
    </feature>
    <feature name="BluetoothSerial">
        <param name="android-package" value="com.megster.cordova.BluetoothSerial" />
    </feature>
    <preference name="orientation" value="landscape" />
    <allow-intent href="market:*" />
    <name>Caça ao Tesouro</name>
    <description>
        Um jogo super divertido em que você precisa encontrar o tesouro adversário, antes que ele encontre o seu.
    </description>
    <author email="gcdpinho@gmail.com" href="http://cordova.io">
        Gustavo Pinho
    </author>
    <content src="index.html" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
</widget>
